{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["resources/js/*"]
    }
    // "types": [
    //   // 一定要声明
    //   "vite-svg-loader"
    // ]
  },
  "include": [
    "**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue"
  ],
  "exclude": ["node_modules", "public", "dist"],
  "compileOnSave": false
}
